{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es2022",
    "lib": ["es2022"],
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,    
    "strict": true,                                      
    "skipLibCheck": true,
    "moduleResolution": "node",

  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
